// Prisma Schema for ModelMagic Dashboard
// Database: PostgreSQL (Neon)
// Aligned with project specification v1.0

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// ENUMS
// ============================================

enum UserRole {
  CLIENT
  ADMIN
}

enum ProjectStatus {
  INTAKE_NEW        // Client submits form
  AWAITING_PAYMENT  // Admin assigns package
  PAID              // Admin marks paid
  IN_QUEUE          // System auto-transitions
  GENERATING        // Admin starts production
  REVIEW_READY      // Assets uploaded
  COMPLETED         // Client approves
}

enum AssetType {
  REFERENCE   // Client-uploaded flat-lay images
  GENERATED   // AI-generated model shots
}

enum AssetStatus {
  PENDING
  READY
  REVISION_REQUESTED
  APPROVED
}

enum NotificationType {
  PAYMENT_REQUESTED
  PAYMENT_CONFIRMED
  MAGIC_LINK_SENT
  ASSETS_READY
  REVISION_SUBMITTED
  PROJECT_COMPLETED
}

// ============================================
// USER & AUTHENTICATION MODELS
// ============================================

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  emailVerified DateTime?
  name          String
  image         String?
  role          UserRole  @default(CLIENT)

  // Relations
  accounts      Account[]
  sessions      Session[]
  projects      Project[]
  magicLinks    MagicLink[]
  notifications Notification[]
  statusChanges ProjectStatusHistory[] @relation("ChangedBy")

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([email])
  @@index([role])
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model MagicLink {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)

  createdAt DateTime @default(now())

  @@index([token])
  @@index([userId])
  @@index([expiresAt])
}

// ============================================
// CORE BUSINESS MODELS
// ============================================

model Project {
  id              String        @id @default(uuid())
  userId          String
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Project Details
  productType     String        // e.g., Clothing, Accessories, Footwear
  creativeBrief   String        @db.Text

  // Status and Workflow
  status          ProjectStatus @default(INTAKE_NEW)

  // Package and Payment
  packageType     String?       // e.g., 10-shots, 20-shots
  paymentLinkUrl  String?       // Lemon Squeezy URL
  paidAt          DateTime?

  // Completion
  completedAt     DateTime?

  // Relations
  assets          Asset[]
  statusHistory   ProjectStatusHistory[]
  notifications   Notification[]

  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model Asset {
  id            String      @id @default(uuid())
  projectId     String
  project       Project     @relation(fields: [projectId], references: [id], onDelete: Cascade)

  // Asset Classification
  type          AssetType
  status        AssetStatus @default(PENDING)

  // File Information
  fileName      String
  fileUrl       String      // R2 URL
  fileKey       String      // R2 storage key
  mimeType      String
  fileSize      Int         // in bytes

  // Image dimensions (optional)
  width         Int?
  height        Int?

  // Revision Tracking
  revisionNotes String?     @db.Text

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([projectId])
  @@index([type])
  @@index([status])
}

model ProjectStatusHistory {
  id          String         @id @default(uuid())
  projectId   String
  project     Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)

  fromStatus  ProjectStatus?
  toStatus    ProjectStatus

  changedById String?
  changedBy   User?          @relation("ChangedBy", fields: [changedById], references: [id], onDelete: SetNull)

  notes       String?        @db.Text

  createdAt   DateTime       @default(now())

  @@index([projectId])
  @@index([createdAt])
}

// ============================================
// NOTIFICATIONS
// ============================================

model Notification {
  id        String           @id @default(uuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  projectId String?
  project   Project?         @relation(fields: [projectId], references: [id], onDelete: Cascade)

  type      NotificationType
  title     String
  message   String           @db.Text
  read      Boolean          @default(false)

  createdAt DateTime         @default(now())

  @@index([userId])
  @@index([projectId])
  @@index([read])
  @@index([createdAt])
}
